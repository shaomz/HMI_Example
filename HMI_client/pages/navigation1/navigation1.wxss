.container{
  width:100vw;
  height:100vh;
  display: flex;
  align-items:  center;
  justify-content:  space-evenly;
  background: #F5F5F5;
  color: #4D8AD7;
  font-size: 30px;
  padding-top: 100rpx;
  /* padding-left: 100rpx; */
}
.view1{
  width:100%;
  height:100%;
  display: flex;
  align-items:  center;
  flex-direction:  row;
  /* justify-content:  space-evenly; */
  background: #F5F5F5;
  color: #4D8AD7;
  font-size: 20px;
  position: relative;
  left: 5%;
}
input{
  border: 2px solid #4D8AD7;
  width: 60%;
  margin: 5%;
}
.item{
  width: 400rpx;
  height: 150rpx;
  display: flex;
  align-items:  center;
  flex-direction: column;
  justify-content:  center;
  background-color: #F5F5F5;
  color: #4D8AD7;
  border: 2px  solid #4D8AD7;
  font-size: 30px;
  border-radius: 6px;
}
.font{
  font-size: 20px;
}